# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git

recursive-include src *.py
recursive-include pydidas_scripts *.py
recursive-include src/pydidas/docs *.png
recursive-include src/pydidas/docs *.rst
recursive-include src/pydidas/resources *.png
recursive-include src/pydidas/resources *.svg

recursive-exclude tests *
recursive-exclude src/pydidas/docs/build *
recursive-exclude src/pydidas/sphinx *

include MANIFEST.in
include README.md
include LICENSE.md
include pyproject.toml
include CHANGELOG.rst
include CITATION.CFF
include pydidas/docs/make.bat
include pydidas/docs/Makefile
